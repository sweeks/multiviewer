{
  // Shared Pyright/Pylance settings so CLI and VS Code use the same environment/paths.
  "venvPath": ".",
  "venv": ".venv",
  "extraPaths": ["src"],
  "include": ["src", "tests"],
  "typeCheckingMode": "strict",
  "exclude": ["build", ".venv", "cruft"],
  "reportUnnecessaryTypeIgnoreComment": "error"
}
